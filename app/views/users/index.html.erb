<h1>User Managment</h1>
<p>Control all user names in Database</p>
<%=link_to "Add New User", { controller: "users", action: "new"}%>

<table class="users">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email Address</th>
        <% if current_user.admin?  %>
            <th>Admin Privilages</th>
        <% end %>
        <th></th>
    </tr>
    
    <%= will_paginate %>
    <% @users.each do |user| %>
    <tr>
        <td> <%= user.firstname %> </td>
        <td> <%= user.lastname %>  </td>
        <td> <%= user.username %>  </td>
        <td> <%= user.email %>  </td>
        <% if current_user.admin?  %>
          <td> <%= user.admin %> </td>
          <td><%= link_to "edit", { controller: "users", action: "edit", :id => user.id} %></td>
          <td><%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %></td>
        <% end %>
    </tr>
  <% end %>
  <%= will_paginate %>
</table>
